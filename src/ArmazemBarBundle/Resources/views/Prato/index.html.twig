            </div>
            <div class="media-body">
                <ul class="breadcrumb">
                    <li><a href="{{ path('index') }}"><i class="glyphicon glyphicon-home"></i></a></li>
                    <li>Pratos</li>
                </ul>
                <h4>Pratos</h4>
            </div>
        </div><!-- media -->
    </div><!-- pageheader -->
     <div class="contentpanel">
         
         Bem-Vindo
     </div><!-- contentpanel -->
{% endblock %}
